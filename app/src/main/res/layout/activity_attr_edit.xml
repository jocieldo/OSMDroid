<com.rey.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/child_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:logo="@mipmap/ic_app"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="childActivity" />

    <com.rey.material.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.rey.material.widget.LinearLayout
            android:id="@+id/input_info_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <!--<com.rey.material.widget.EditText-->
                <!--android:id="@+id/textfield_et_label"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="包含标签的输入框"-->
                <!--android:inputType="text"-->
                <!--app:et_inputId="@+id/textfield_et_label_input"-->
                <!--app:et_supportMode="none"-->
                <!--app:v_styleId="@array/edittext"/>-->


        </com.rey.material.widget.LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="#66CCFF" />

        <com.rey.material.widget.LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:padding="10dp">

        </com.rey.material.widget.LinearLayout>

    </com.rey.material.widget.LinearLayout>
</com.rey.material.widget.LinearLayout>